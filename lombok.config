# Lombok configuration
# Restrict to safe annotations for educational purposes

# Allowed annotations
lombok.anyConstructor.addConstructorProperties=true
lombok.addLombokGeneratedAnnotation=true

# Disallowed annotations
lombok.data.flagUsage=error
lombok.value.flagUsage=error
lombok.setter.flagUsage=error
lombok.requiredArgsConstructor.flagUsage=warning
lombok.toString.flagUsage=warning
lombok.equalsAndHashCode.flagUsage=warning

# Only allow JBoss logging
lombok.log.fieldName=log
lombok.log.fieldIsStatic=true